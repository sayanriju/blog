<!-- Page Header -->
<!-- Set your background image for this header in your post front-matter: cover -->
<%
    var cover = item.cover || theme.index_cover;
%>
<header class="intro-header" style="background-image: url('<%- cover %>')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1><%- item.title || theme.default_post_title || "Untitled" %></h1>
                    <% if (item.subtitle && item.subtitle.length) { %>
                    <h2 class="post-subheading">
                        <%- item.subtitle %>
                    </h2>
                    <% } %>
                    <span class="meta">
                        <!-- Date and Author -->
                        <% if(item.author) { %>
                            Posted by <%- item.author %> on
                        <% } %>
                        <%= item.date.format(config.date_format) %>
			<% if (typeof readingTime === 'function') { %>
			    &nbsp;-&nbsp;<%- readingTime(page.content) %>
			<% } %>
                    </span>
		    <div style="padding: 0.75em 0;">
                    <% if (item.tags && item.tags.length){ %>
			<%- partial('article-tags-labels', {item: item}) %>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">

            <!-- Tags and categories -->
           <% if (item.categories && item.categories.length) { %>
                <div class="col-lg-4 col-lg-offset-2 col-md-5 col-md-offset-1 post-categories">

                <%- partial('article-categories', {item: item}) %>
                </div>

            <% } %>

            <!-- Gallery -->
            <% if (item.photos && item.photos.length){ %>
                <%- partial('gallery') %>
            <% } %>

            <!-- Post Main Content -->
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <%- item.content %>

            <div class="row" style="border-radius: 7px; padding: 0.5em; background-color: #c2c9d4; margin-top: 3em;">
                <div class="col-sm-2">
                    <img class="pull-left img-circle" style="margin-top: 0.5em;" src="https://www.gravatar.com/avatar/daee2b91103a32ef15163fd0e145e2e9" alt="...">
                </div>
                <div class="col-sm-10">
                    <strong>
                        <em>By:&nbsp;&nbsp;</em> 
                        <a href="mailto:s26c.sayan@gmail.com">Sayan "Riju" Chakrabarti</a>
                    </strong><br/>
                    Geeky. Nerdy. Socially Awkward-y. Tobacco & coffee connoisseur.
Loves to code -> does that for a living. Works on GNU/Linux. Idealistic about Free & Open-source Software.
                </div>
             </div>

                <% if(theme.addthis) { %>
                    <!-- Go to www.addthis.com/dashboard to customize your tools -->
                    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=<%- theme.addthis %>"></script>

                    <!-- Go to www.addthis.com/dashboard to customize your tools -->
                    <div class="addthis_sharing_toolbox"></div>
                <% } %>
            </div>

            <!-- Comments -->
            <% if (item.comment != false) { %>
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <%- partial("_partial/comments.ejs") %>
                </div>
            <% } %>
        </div>
    </div>
</article>
